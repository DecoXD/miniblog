<div class="form-section">
   <h3 class="fs-1 text-center"> Create Post</h3>
    <form action="/posts/update" method="POST" class="form-container">
    <input type="hidden" name="id" value="{{postData.id}}">
        <label class="form-item">
            <span>title</span>
            <input type="text" name="title" class="form-input" value="{{postData.title}}" required >
        </label>
        <label class="form-item">
            <span>tags</span>
            <input type="text" name="tag"  class="form-input" value="{{postData.tag}}" required>
        </label>
        <label class="form-item">
            <span>image</span>
            <input type="text" name="image"  class="form-input" value="{{postData.image}}" required>
        </label>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
    {{#if messages.message}}
        <p class="error-msg"> {{messages.message}}</p>
    {{/if}}
</div>