<h1>dashboard</h1>

{{#if messages.message}}
    <p class="error-msg">{{messages.message}}</p>
{{/if}}
{{#if postData }}
    {{#each postData}}
        <div class="card" style="max-width: 30rem;">
        <img src="{{this.image}}" class="card-img-top" alt="post-image">
        <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        
        <p class="tag-container">
        {{#each this.tag}}
            <span class="post-tag">#{{this}}</span>
        {{/each }}</p>
        <a href="/posts/update/{{this.id}}" class="btn "><i class="bi bi-pencil"></i></a>
        <form action="/posts/delete" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
        <button type="submit" class="btn btn-primary"><i class="bi bi-trash"></i></button>
        </form>
    </div>
    </div>
   {{/each}} 

{{/if}}